# SysTracker Production Environment Configuration
# Copy this file to .env in your production server directory

# === Server Configuration ===
NODE_ENV=production
PORT=3001
HOST=0.0.0.0

# === Database Configuration ===
# SQLite database path (relative to server directory)
DB_PATH=./systracker.db

# === Security ===
# Generate a secure JWT secret: openssl rand -base64 32
JWT_SECRET=your-production-jwt-secret-change-this
# API key for agent authentication: openssl rand -hex 32
API_KEY=your-production-api-key-change-this

# === SMTP Email Configuration ===
# Required for password resets and notifications
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=no-reply@yourdomain.com
SMTP_PASSWORD=your-smtp-password
SMTP_SECURE=false
SMTP_FROM="SysTracker <no-reply@yourdomain.com>"

# === CORS Configuration ===
# Add your production domain(s)
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# === File Uploads ===
# Maximum file size for uploads (chat attachments)
MAX_FILE_SIZE_MB=100

# === Session Configuration ===
# Session timeout in hours
SESSION_TIMEOUT_HOURS=24

# === Logging ===
LOG_LEVEL=info
LOG_FILE=./logs/systracker.log

# === Application Settings ===
APP_NAME=SysTracker
APP_VERSION=3.2.7
APP_URL=https://yourdomain.com

# === Agent Configuration ===
# Agent update endpoint
AGENT_UPDATE_URL=https://yourdomain.com/api/agent/update
# Agent version management
AGENT_VERSIONS_PATH=./agent-versions

# === Rate Limiting ===
# API rate limiting (requests per minute)
RATE_LIMIT_RPM=100
# Login attempt rate limit
LOGIN_RATE_LIMIT=5

# === Backup Configuration ===
# Automatic backup settings
BACKUP_ENABLED=true
BACKUP_PATH=./backups
BACKUP_RETENTION_DAYS=30

# === Monitoring ===
# Health check endpoint
HEALTH_CHECK_ENABLED=true
# Metrics collection
METRICS_ENABLED=true

# === SSL/TLS Configuration ===
# If using HTTPS directly (otherwise use reverse proxy)
SSL_ENABLED=false
SSL_KEY_PATH=
SSL_CERT_PATH=

# === Advanced Settings ===
# WebSocket configuration
WS_PING_INTERVAL=30000
WS_PING_TIMEOUT=5000

# Database connection pool
DB_CONNECTION_POOL_SIZE=10

# Compression
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=6

# === External Services ===
# Optional integrations
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=
TELEGRAM_BOT_TOKEN=

# === Development/Debug ===
# Set to false in production
DEBUG=false
VERBOSE_LOGGING=false
