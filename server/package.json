{
  "name": "systracker-server",
  "version": "3.2.3",
  "main": "server.js",
  "bin": "server.js",
  "scripts": {
    "build:win": "pkg . --targets node18-win-x64 --output dist/systracker-server-win.exe && node ./scripts/add-icon.js",
    "build:linux": "pkg . --targets node18-linux-x64 --output dist/systracker-server-linux",
    "build:all": "pkg . --targets node18-win-x64,node18-linux-x64 --out-path dist && node ./scripts/add-icon.js",
    "build:tray": "csc /target:winexe /out:dist/SysTrackerServer.exe tray/SysTrackerTray.cs /r:System.Windows.Forms.dll /r:System.Drawing.dll /r:System.Net.Http.dll",
    "build:agent-installer": "makensis /V4 ..\\agent\\installer.nsi",
    "build:server-installer": "makensis /V4 installer.nsi"
  },
  "pkg": {
    "assets": [
      "dashboard-dist/**/*",
      "schema_sqlite.sql",
      "schema.sql",
      "emailTemplates.js",
      "dataValidation.js",
      "errorLogger.js",
      "migrate_db.js",
      "migrate_processes.js",
      "init_db.js",
      "bin/**/*",
      "app.ico",
      ".env"
    ],
    "targets": [
      "node18-win-x64",
      "node18-linux-x64"
    ],
    "outputPath": "dist",
    "scripts": [
      "server.js",
      "emailTemplates.js",
      "dataValidation.js",
      "errorLogger.js"
    ]
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.22.1",
    "jsonwebtoken": "^9.0.3",
    "multer": "^2.0.2",
    "nodemailer": "^8.0.1",
    "socket.io": "^4.6.1",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "pkg": "^5.8.1",
    "rcedit": "^1.1.2"
  }
}
